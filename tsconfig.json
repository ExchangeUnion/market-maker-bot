{
  "include": [ "src" ],
  "exclude": [
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "allowJs": false,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "lib": ["dom","ES2017"],
    "declaration": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "sourceMap": true
  }
}
